<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    tools:context=".UserInputActivity">

    <!-- Question -->
    <EditText
        android:id="@+id/editTextQuestion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input: Name"
        android:layout_marginBottom="16dp"/>

    <!-- Question -->
    <EditText
        android:id="@+id/editTextQuestion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input: Date of Birth"
        android:layout_marginBottom="16dp"/>

    <!-- Question -->
    <EditText
        android:id="@+id/editTextQuestion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input: Gender"
        android:layout_marginBottom="16dp"/>

    <!-- Question -->
    <EditText
        android:id="@+id/editTextQuestion4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input: Occupation"
        android:layout_marginBottom="16dp"/>


    <!-- Question -->
    <EditText
        android:id="@+id/editTextQuestion5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input: Any Allergies"
        android:layout_marginBottom="16dp"/>

    <!-- Question -->
    <EditText
        android:id="@+id/editTextQuestion6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input: Existing Medical Conditions"
        android:layout_marginBottom="16dp"/>


    <!-- Question -->
    <EditText
        android:id="@+id/editTextQuestion7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input: Insurance Provider"
        android:layout_marginBottom="16dp"/>


    <!-- Button to move to the next activity -->
    <Button
        android:id="@+id/completeRegistrationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register person"
        android:layout_marginTop="16dp"/>

</LinearLayout>
